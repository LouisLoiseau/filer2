{% extends 'layout.html.twig' %}

{% block page_title %}Filer | Login{% endblock %}

{% block title %}Filer | Login {% endblock %}

{% block content %}
    <h1>
    Login to see your files<br>
</h1>
<form name="login-form" method="post" action="?action=login">
    <label>Firstname</label><br>
    <input name="firstname" type="text" id="firstname" required placeholder="John">{{ errors['firstname'] }}<br><br>
    <label>Password</label><br>
    <input name="password" type="password" id="password" required placeholder="i'mtherealjohndoe">{{ errors['password'] }}<br><br>
    <button type="submit" name="login-btn">Register</button>    
</form>
{% endblock %}